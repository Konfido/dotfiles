{
    //Commonly used
    "editor.fontFamily": "'Hack','Fira Code','JetBrain Mono'",
    "editor.fontLigatures": true,
    "editor.rulers": [80],
    "editor.minimap.enabled": false,
    "editor.quickSuggestions": { // 控制键入时是否应自动显示建议
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.tabSize": 4,
    "editor.multiCursorModifier": "alt",
    "editor.formatOnPaste": true,
    "editor.largeFileOptimizations": false,
    "editor.renderControlCharacters": false,
    "editor.overviewRulerBorder": false,
    "editor.renderWhitespace": "none",
    "editor.semanticHighlighting.enabled": false,
    "editor.suggestSelection": "first",
    "editor.tokenColorCustomizations": {
        "[Tokyo Night]": { // or "[Tokyo Night Storm]"
            "textMateRules": [{
                "scope": [
                    "string.quoted",
                ],
                "settings": {"foreground": "#97CD9B"}
            }]
        }
    },
    "python.pythonPath": "/Users/dhh/anaconda3/bin/python",
    "python.condaPath": "/Users/dhh/anaconda3/bin/conda",
    "python.formatting.autopep8Path": "/Users/dhh/anaconda3/bin/autopep8",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pycodestyleArgs": ["--ignore=E501, E265"],
    "python.jediEnabled": false,
    "python.languageServer": "Pylance",
    "python.jediMemoryLimit": 1,

    "[python]": {},

    "atomKeymap.promptV3Features": true,

    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.showTabs": true,
    "workbench.colorTheme": "Summer",

    // 显示详细文件目录
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}",
    "window.restoreWindows": "all",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        ".zshrc": "properties",
        ".bash_profile": "properties",
        "*.scpt": "applescript",
        "*.gs": "javascript",
        "*.styl": "vue-postcss",
        "*.swig": "jxa",
        "*.sgm": "xml",
        "*.perl": "perl",
        "*.json": "jsonc"
    },
    // Mappings for paths
    "path-intellisense.mappings": {
        "/": "${workspaceRoot}",
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        },
        "editor.wordBasedSuggestions": false,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.lineNumbers": "off",
        "editor.wordWrap": "on",
        "files.trimFinalNewlines": false,
        "files.trimTrailingWhitespace": false
    },
    "foam.graph.style": {
        "fontSize": 14,
        "lineColor": "#277da1",
        "lineWidth": 0.2,
        "particleWidth": 1.0,
        "highlightedForeground": "#f9c74f",
        "node": {
            "note": "#277da1",
            "placeholder": "#545454",
        }
    },
    //文件头设置
    "psi-header.config": {
        "forceToTop": true,
        "blankLinesAfter": 2,
        "license": "Custom"
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "modAuthor": "Modified By:   ",
        "modDate": "Last Modified: ",
        "modDateFormat": "date",
        "include": [
            "python", "shellscript", "applescript"
        ],
        "exclude": [],
        "autoHeader": "manualSave"
    },
    "psi-header.license-text": [
        "It seems to be working fine ... for now."
    ],
    "psi-header.variables": [
        ["company", "xxx"],
        ["copyrightholder", ""],
        ["author","Konfido"],
        ["authoremail","konfido.du@outlook.com"]
    ],
    "psi-header.lang-config": [
        {
            "language": "python",
            "begin": "",
            "prefix": "# ",
            "end": "",
            "blankLinesAfter": 0,
            "beforeHeader": [
                "#!/usr/bin/env python3",
                "# -*- coding: utf-8 -*-",
                // ""
            ]
        },
        {
            "language": "shellscript",
            "begin": "",
            "prefix": "# ",
            "end": "",
            "blankLinesAfter": 0,
            "beforeHeader": [
                "#!/bin/bash"
            ]
        },
        {
            "language": "applescript",
            "begin": "",
            "prefix": "# ",
            "end": "",
            "blankLinesAfter": 0,
            "beforeHeader": []
        }
    ],
    "psi-header.templates": [
        {
            "language": "*",
            "template": [
                "--------------------------------------",
                "Created by <<author>> on <<filecreated('YYYY-MM-DD')>>",
                "--------------------------------------",

                //"------------------------------------------------",
                //"Author:        <<author>>",
                //"Created Date:  <<filecreated('MMMM Do YYYY')>>",
                //"------------------------------------------------",
                // "Description:   ",
                // "----------------------------------------------------------",
                // "Author:        <<author>> <<<authoremail>>>",
                // "Created Date:  <<filecreated('MMMM Do YYYY')>>",
                // "Modified By:   <<author>> <<<authoremail>>>",
                // "Last Modified: <<filecreated('MMMM Do YYYY, HH:mm:ss')>>",
                // "----------------------------------------------------------",
                // "Copyright © <<year>> <<copyrightholder>>",
                // "----------------------------------------------------------",
                // "History:",
                // "Date       By        Comments",
                // "---------- --------- -------------------------------------",
            ],
            "changeLogCaption": "History:",
            "changeLogEntryTemplate": [
                "<<dateformat('YYYY-MM-DD')>> <<author>>   "
            ],
            "changeLogNaturalOrder": true
        }
    ],

    //TODO Highlight Settings
    //"todohighlight.isEnable": true,
    "todohighlight.defaultStyle": {
        "cursor": "pointer",
        "isWholeLine": false,
    },
    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "NOTE:",
            "color": "yellow",
            "backgroundColor": "red",
        },
        {
            "text": "TODO:",
            "color": "#000",
            "isWholeLine": false,
        },
        {
            "text": "FIX:",
            "color": "red",
            "border": "1px solid red",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)",
            //other styling properties goes here ...
        },
    ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.py",
    ],
    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/*.json",
        "**/.next/**",
    ],
    "todohighlight.toggleURI": true,

    "sync.gist": "c3922134338acbfeeed3c6faf8b15c14",
    "sync.quietSync": true,
    "sync.askGistName": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.forceDownload": false,
    "breadcrumbs.enabled": true,
    "csv-preview.lineNumbers": "ordinal",
    "[subrip]": {
        "editor.lineNumbers": "off",
    },
    "[clojure]": {
        "editor.lineNumbers": "off"
    },
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "git.ignoreLegacyWarning": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex*2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "kanban": {
        "trackTime": true,
    },
    "tabnine.experimentalAutoImports": true,
    "python.showStartPage": false,
    "editor.accessibilitySupport": "off",
    "vim.visualModeKeyBindingsNonRecursive": [
        // Bind > and < in visual mode to indent/outdent lines (repeatable)
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-e>": false,
        "<C-k>": false,
    },
    "todo-tree.tree.showScanModeButton": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "editor.wordWrap": "on",
    "gutterpreview.imagePreviewMaxHeight": 300,
    "search.followSymlinks": false,
    "python.defaultInterpreterPath": "/Users/dhh/anaconda3/bin/python",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "redhat.telemetry.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "shellcheck.exclude": [
        "2086",
        "2120",
        "2119",
        "2164"
    ],
    "highlight.regexes": {
        "(TODO: )(.*)": [
            {
                "overviewRulerColor": "#ffcc00",
                "backgroundColor": "#ffcc00",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#d9ad00",
                "color": "#1f1f1f"
            }
        ],
        "(FIXME: )(.*)": [
            {
                "overviewRulerColor": "#ff0000",
                "backgroundColor": "#ff0000",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#d90000",
                "color": "#1f1f1f"
            }
        ],
        // "(```.+?```)": {
        //     "regexFlags": "gs",
        //     "decorations": {
        //         "backgroundColor": "#14141B",
        //         "isWholeLine": true,
        //     },
        //     "filterLanguageRegex": "markdown",
        //     "filterFileRegex": ".*\\.md"
        // }
    },
    "workbench.startupEditor": "none",
    "editor.fontSize": 15,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "markdownExtended.disabledPlugins": "kbd",
    "vscodeMarkdownNotes.lowercaseNewNoteFilenames": false,
    "vscodeMarkdownNotes.slugifyCharacter": "NONE",
    "markdown-preview-enhanced.imageUploader": "sm.ms",
    "markdown-preview-enhanced.liveUpdate": true,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.enableEmojiSyntax": false,
    "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.enabled": false,
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "markdownlint.config": {
        "MD025": false
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "info",
        "warning"
    ],
    "svg.preview.mode": "svg"
}
