                      [:!Cw :!Cq  :iCal]                ; Command+W to quit
                      [:!Cw :!Cm  :Reminders]           ; Command+W to hide instead of quitting
                      [:!T1 :!TC3 :Typora]              ; File Tree
                      [:!T2 :!TC1 :Typora]              ; Toggle TOC
                      [:!Tr :!COr :Typora]              ; Footnote (注脚，引用，Reference)
                      [:!Cescape :!C0 :Typora]          ; Change to plain text
                      [:!Chyphen :!TSgrave_accent_and_tilde :Typora]
                      ]}
          { :des "Swaping OR Simultaneous"
            :rules  [ ;; Swaping
                                              ; arrow -> jlik
                      [:!Oh :!Oleft_arrow]              ; move cursor by word
                      [:!Ol :!Oright_arrow]
                      [:!Th :!Tleft_arrow]              ; swith screen
                      [:!Tl :!Tright_arrow]
                      [:!SOh :!SOleft_arrow]            ; select by word
                      [:!SOl :!SOright_arrow]
                      [:!CSh :!CSleft_arrow]            ; select from the beginning of sentence
                      [:!CSl :!CSright_arrow]
                                              ; others
                      [:##left_command :left_option :tmp_keyboard]
                      [:##left_option :left_command :tmp_keyboard]
                      [:grave_accent_and_tilde [:!COspacebar :grave_accent_and_tilde :!COspacebar] :cn] ; Symbol Mapping for Pinyin Input
                      ; [:grave_accent_and_tilde [:!COspacebar :grave_accent_and_tilde [:delay 0.1] :!COspacebar] :cn] ; Symbol Mapping for Pinyin Input

                      ;; Simultaneous keys
                      ;[[:d :f] :delete_or_backspace]
                    ]}
          { :des "Quit application only when tapping command-q twice"
            :rules  [
                      [:!C#Pq [:!Cq ["command-q" 0]] ["command-q" 1]]
                      [:!C#Pq ["command-q" 1] nil {:delayed {:invoked ["command-q" 0] :canceled ["command-q" 0]}}]
