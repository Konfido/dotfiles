                      ; [:caps_lock :f20 nil {:alone :escape}]                ; caps_lock -> ⌃/escape; under effect of "caps_lock-mode"
                      [:caps_lock :left_control nil {:alone :escape}]       ; escape && jump out of inputting
                      [:left_command :left_command nil {:alone :!Ow}]       ; Moom
                      ]}
                      ]
